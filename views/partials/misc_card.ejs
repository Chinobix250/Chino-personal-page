<div class="card" style="width: 18rem;">
    <img src="<%= img_src %>" alt="<%= img_alt %>" class="card-img-top" style="height: 200px; object-fit: cover;">
    <div class="card-body">
        <h5 class="card-title"><%= title %></h5>
        <p class="card-text"><%= description %></p>

        <% if (githubLink) { %>
            <a href="<%= githubLink %>" class="card-link">Ver en GitHub</a>
        <% } else { %>
            <p class="card-text text-muted">Ver en GitHub</p>
        <% } %>
        
        <% if (itchioLink) { %>
            <a href="<%= itchioLink %>" class="card-link">Ver en itch.io</a>
        <% } else { %>
            <p class="card-text text-muted">Ver en itch.io</p>
        <% } %>

        <% if (gamejoltLink) { %>
            <a href="<%= gamejoltLink %>" class="card-link">Ver en GameJolt</a>
        <% } else { %>
            <p class="card-text text-muted">Ver en GameJolt</p>
        <% } %>
    </div>
</div>